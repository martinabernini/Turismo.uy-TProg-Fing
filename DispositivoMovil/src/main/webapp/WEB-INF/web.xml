<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">


	<!-- parametrize hostIP and port -->
	<context-param>
		<param-name>hostIP</param-name>
		<param-value>localhost</param-value>
	</context-param>

	<context-param>
		<param-name>hostPort</param-name>
		<param-value>9128</param-value>
	</context-param>

	<servlet>
		<servlet-name>IniciarSesion</servlet-name>
		<servlet-class>com.controllers.IniciarSesion</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>IniciarSesion</servlet-name>
	    <url-pattern></url-pattern>
	</servlet-mapping>
	
</web-app>